@model IEnumerable<Findjobs>

@{
    ViewData["Title"] = "List of Current Jobs";
}
<style>
    .job-card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
        border: none;
        border-radius: 10px;
        overflow: hidden;
    }

        .job-card:hover {
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: none;
        padding: 1.5rem;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .card-body {
        padding: 1.5rem;
    }

    .card-text {
        margin-bottom: 0.5rem;
    }

    .badge {
        font-size: 0.8rem;
        padding: 0.4rem 0.6rem;
        border-radius: 2rem;
    }

    .btn-details {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }

    .btn-test {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
</style>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 mb-3">
            <div class="card h-100 job-card">
                <div class="card-header">
                    <h5 class="card-title d-flex justify-content-between align-items-center">
                        <span>@item.Name</span>
                        <a class="text-decoration-none text-secondary" href="#"><i class="bi bi-pencil-square"></i></a>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 d-flex justify-content-center align-items-center">
                            <img src="@item.ImageURL" class="img-fluid" alt="@item.Name">
                        </div>
                        <div class="col-md-6">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Job: </b>@item.Jobs.Name</p>
                            <p class="card-text"><b>Category: </b>@item.JobCategory</p>
                            <p class="card-text"><b>Salary: </b>@item.Salary</p>
                            <p class="card-text"><b>Start Date: </b>@item.Startdate.ToString("dd MMM yy")</p>
                            <p class="card-text"><b>End Date: </b>@item.Enddate.ToString("dd MMM yy")</p>
                            <p class="card-text">
                                <b>Status: </b>
                                @if (DateTime.Now >= item.Startdate && DateTime.Now <= item.Enddate)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else if (DateTime.Now > item.Enddate)
                                {
                                    <span class="badge bg-danger text-white">EXPIRED</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-white">UPCOMING</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="#" class="btn btn-outline-primary btn-details"><i class="bi bi-eye-fill"></i> Show Details</a>
                        <a href="#" class="btn btn-danger btn-test"><i class="bi bi-question-circle"></i> Perform Test</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
